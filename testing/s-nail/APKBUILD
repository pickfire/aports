# Contributor: Ivan Tham <pickfire@riseup.net>
# Maintainer: Ivan Tham <pickfire@riseup.net>
pkgname=s-nail
pkgver=14.8.16
pkgrel=0
pkgdesc="An incarnation of BSD Mail / POSIX mailx"
url="https://www.sdaoden.eu/code.html#s-mailx"
arch="all"
license="BSD"
makedepends="libressl-dev libidn-dev"
options="suid"
replaces="mailx"
subpackages="$pkgname-doc"
source="https://ftp.sdaoden.eu/${pkgname}-${pkgver}.tar.xz"
builddir="$srcdir/"${pkgname}-${pkgver}

build() {
	cd "$builddir"
	make SID= NAIL=mail PREFIX=/usr SYSCONFDIR=/etc WANT_AUTOCC=0 config \
		|| return 1
	make build || return 1
}

check() {
	cd "$builddir"
	make test || return 1
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" packager-install || return 1
	install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

sha512sums="c6e431df0325cb2561bdc6dd507155829ab48cc8731971139d75058a1bfbd010eab3a1077b5c45ac7850d3b71ab45cf4df7ab62b1b6a1bf97b098b5278161b15  s-nail-14.8.16.tar.xz"
